[user]
	email = govind.gnanakumar@outlook.com
	name = Govind Gnanakumar
[alias]
	co = checkout
	ad = add
	br = branch
	ci = commit --verbose
	st = status
	unstage = reset HEAD --
	last = log -1 HEAD
	visual = !gitk
[core]
	pager = nvim -R
[merge]
	tool = nvimdiff4
[mergetool "nvimdiff4"]
	cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[color]
	pager = no
[help]
	autocorrect = 50
